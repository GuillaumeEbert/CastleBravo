<?xml version="1.0" encoding="utf-8"?>


<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadiusRatio="2.8"
        android:shape="ring"
        android:thickness="3.8dp"
        android:useLevel="false" >

        <gradient
            android:startColor="@color/api_progress_bar_preloader_start"
            android:centerColor="@color/api_progress_bar_preloader_center"
            android:endColor="@color/api_progress_bar_preloader_stop"
            android:centerY="0.50"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>