<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/iv_bluetooth_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/api_wifi_signal_lock_4_bar"
        />

    <TextView
        android:id="@+id/tv_bluetooth_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        tools:text="SSID"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_bluetooth_icon" />

    <TextView
        android:id="@+id/tv_bluetooth_device_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/tv_bluetooth_device_name"
        android:layout_below="@+id/tv_bluetooth_device_name"
        tools:text="Connecting"
    />





</RelativeLayout>

